              "mode": "raw",
              "raw": "{\n  \"masjidId\": \"{{masjid_id}}\",\n  \"name\": \"Test Event\",\n  \"description\": \"This is a test event\",\n  \"eventDate\": \"2025-12-31\",\n  \"eventTime\": \"19:00\",\n  \"location\": \"Main Hall\"\n}",
              "options": {
