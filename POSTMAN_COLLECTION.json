              "mode": "raw",
              "raw": "{\n  \"masjidId\": \"{{masjid_id}}\",\n  \"title\": \"Test Notification\",\n  \"description\": \"This is a test notification\",\n  \"category\": \"General\"\n}",
              "options": {
